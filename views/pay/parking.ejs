<% include ../layouts/header.ejs %><script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script><style>    a{        text-decoration: none;        color: black;    }    a:hover{        text-decoration: none;        color: black;    }</style><div class="container">    <div class="main">        <div class="headding">            <h1 class="text-center">Parking</h1>        </div>        <br><br>        <%if(msg!=null){%>        <div class="text-center alert alert-<%=alert%>" role="alert">            <%=msg%>        </div>        <%}%>        <form action="/pay/parking" method="post" class="form-group">            <div class="row">                <div class="col">                    <div class="form-group">                        <label for="vehicle">Select Vehicle</label>                        <select class="form-control" name="vehicle" id="vehicle">                            <option value="2 Wheelers">2 Wheelers</option>                            <option value="3 Wheelers">3 Wheelers</option>                            <option value="4 Wheelers">4 Wheelers</option>                        </select>                    </div>                </div>                <div class="col">                    <div class="form-group">                        <label for="hour">Enter Hours</label>                        <input class="form-control"  placeholder="2 hr"type="number" name="hr" id="hour" value="1">                    </div>                </div>            </div>            <div style="display: none">                <input type="number" name="total" id="total" value="7">            </div>            <div class="row text-center">                <div class="col">                    <p class="btn btn-primary" id="sub" onclick="calc();">Calculate</p>                </div>                <div class="col">                    <button type="submit" class="btn btn-primary" id="sub">Pay</button>                </div>            </div>        </form>        <div class="result">            <div class="text-center" id="rs">            </div>        </div>        <br>        <p id="disp" class="text-center">            <img src="/images/2 Wheelers.png" alt="">        </p>    </div>    <br>    <br>    <div class="container text-center">        <div class="row">            <div class="col">                <a href="/receipts"><img src="/images/receipt.png" width="50" height="50"> <br>Receipt</a>            </div>            <div class="col">                <a href="/transactions"><img src="/images/transaction.png" width="50" height="50"><br>Transaction</a>            </div>            <div class="col">                <a href="#"><img src="/images/Rewards.png" width="50" height="50"><br>Rewards</a>            </div>            <div class="col">                <a href="#"><img src="/images/offers.png" width="50" height="50"><br>Offers</a>            </div>            <div class="col">                <a href="#"><img src="/images/bank.png" width="50" height="50"><br>Bank</a>            </div>            <div class="col">                <a href="/send-money"><img src="/images/sendmoney.png" width="50" height="50"><br>Send Money</a>            </div>            <div class="col">                <a href="/receive-money"><img src="/images/receivemoney.png" width="50" height="50"><br>Receive Money</a>            </div>            <div class="col">                <a href="/balance"><img src="/images/purse.png" width="50" height="50"><br>Balance</a>            </div>        </div>    </div>    <br>    <br>    <br></div><script>    $("#vehicle").on('change',()=>{        let data=$("#vehicle").val();        let s='/images/'+data+'.png';        $('#disp img').attr("src",s);        calc();    });    calc=()=>{        let weeler=$("#vehicle").val();        let hrs = $("#hour").val();        let total = 7 ;        switch(weeler){            case '2 Wheelers' :{                total= Number(hrs)*10;            }break;            case '3 Wheelers' :{                total= Number(hrs)*15;            }break;            case '4 Wheelers' :{                total= Number(hrs)*20;            }break;        }        $('#total').val(total);        let result = "<strong>Selected </strong>"+weeler+" & "+hrs+" <strong>Hours & Total </strong>"+total+" <span>&#8377;</span>";        $('#rs').html(result);    }</script>